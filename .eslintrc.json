{
	"env": {
		"node": true,
		"commonjs": true,
		"es6": true
	},
	"extends": "eslint:recommended",
	"parserOptions": {
		"ecmaVersion": 2018,
		"sourceType": "module"
	},
	"rules": {
		"indent": [
			"error",
			"tab", {
				"SwitchCase": 1,
				"ObjectExpression": 1,
				"FunctionDeclaration": {
					"body": 1,
					"parameters": 2
				},
				"CallExpression": {
					"arguments": 1
				},
				"ImportDeclaration": 1,
				"ArrayExpression": 1,
				"FunctionExpression": {
					"body": 1,
					"parameters": 2
				}
			}
		],
		"linebreak-style": [
			"error",
			"windows"
		],
		"quotes": [
			"error",
			"double"
		],
		"semi": [
			"error",
			"always"
		],
		"arrow-parens": [
			"error", "as-needed"
		]
	}
}